<div class="crayons-card p-6 grid gap-6">
  <table class="crayons-table">
    <thead>
      <tr>
        <th scope="col">ID</th>
        <th scope="col">Filename</th>
        <th scope="col">Status</th>
        <th scope="col">Created at</th>
        <th scope="col">Run at</th>
      </tr>
    </thead>
    <tbody class="crayons-card">
      <% @data_update_scripts.each do |script| %>
        <tr>
          <td class="whitespace-nowrap"><%= script.id %></td>
          <td><%= link_to script.file_name, admin_broadcast_path(script.id) %></td>
          <td class="whitespace-nowrap justify-content-center">
            <%= script.status == "succeeded" ?
                inline_svg_tag("twemoji/check_mark.svg", aria: true, class: "crayons-icon crayons-icon--default success-icon", title: "Success") : inline_svg_tag("twemoji/cross_mark.svg", aria: true, class: "crayons-icon crayons-icon--default", title: "Failed") %>
          </td>

          <td><%= script.created_at %></td>
          <td><%= script.run_at %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</main>
